div#sim-settings.card.card-body

  div.row

    h3 Simulation Settings

    button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-settings", data-hook="collapse") -

  div.collapse(class="show", id="collapse-settings")

    table.table
      thread
        tr
          th(scope="col", colspan="2") Simulation Type
        tr
          td
            input(type="radio", name="simType", data-hook="select-deterministic", data-name="deterministic")
            |  Deterministic

          td
            input(type="radio", name="simType", data-hook="select-stochastic", data-name="stochastic")
            |   Stochastic
      
    div(data-hook='advanced-settings-container')

    table.table
      thread
        tr
          th(scope="col") Simulation Time

          th(scope="col") Time Units

        tr
          td: div(data-hook="end-sim-container")
          
          td: div(data-hook="time-units-container")