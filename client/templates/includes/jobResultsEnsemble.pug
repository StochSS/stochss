div#job-results.card.card-body

  div

    h3.editor-header Results
    button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-results", data-hook="collapse") +

  div.collapse(id="collapse-results", data-hook="job-results")

    table.table
      thead
        tr
          th(scope="col") Title
          th(scope="col") X-axis Label
          th(scope="col") Y-axis Label

      tbody
        tr
          td: div(data-hook="title")
          td: div(data-hook="xaxis")
          td: div(data-hook="yaxis")

    div

      h5.editor-header Plot Standard Deviation Range
      button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-stddevrange", data-hook="collapse-stddevrange") -

    div.collapse(class="show", id="collapse-stddevrange")

      div(data-hook="stddevrange")
      button.btn.btn-primary(data-hook="plot-stddevrange") Plot

    div

      h5.editor-header Plot Trajectories
      button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-trajectories", data-hook="collapse-trajectories") +

    div.collapse(id="collapse-trajectories")

      div(data-hook="trajectories")
      button.btn.btn-primary(data-hook="plot-trajectories") Plot
      button.btn.btn-primary(data-hook="plot-multiple") Multiple Plots

    div

      h5.editor-header Plot Standard Deviation
      button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-stddev", data-hook="collapse-stddev") +

    div.collapse(id="collapse-stddev")

      div(data-hook="stddev")
      button.btn.btn-primary(data-hook="plot-stddev") Plot

    div

      h5.editor-header Plot Trajectory Mean
      button.btn.btn-outline-collapse(data-toggle="collapse", data-target="#collapse-trajmean", data-hook="collapse-trajmean") +

    div.collapse(id="collapse-trajmean")

      div(data-hook="trajmean")
      button.btn.btn-primary(data-hook="plot-trajmean") Plot