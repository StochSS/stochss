      div.mx-1.row.head.align-items-baseline

        div.col-sm-3

          h6 <b>Factor</b>

        div.col-sm-9

          h6 <b>Center</b>

      div.mx-1.mt-3.row

        div.col-sm-3

          div=this.model.factor

        div.col-sm-9

          div

            span.inline (x:

            div.ml-2.inline=this.model.center.x

            span.inline.mr-2 , y:

