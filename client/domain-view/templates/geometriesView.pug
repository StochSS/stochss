          div.col-sm-2

            h6.inline <b>Remove</b>

        div.my-3(data-hook="edit-geometries-list")

        div.dropdown

          button.btn.btn-outline-primary.dropdown-toggle.box-shadow#addGeometryBtn(
            data-hook="add-geometry",
            data-toggle="dropdown",
            aria-haspopup="true",
            aria-expanded="false",
            type="button"
          ) Add Geometry <span class="caret"></span>

          ul.dropdown-menu(aria-labelledby="addGeometryBtn")
            li.dropdown-item(data-hook="standard-geometry" data-name="Standard Geometry") Standard Geometry
            li.dropdown-item(data-hook="combinatory-geometry" data-name="Combinatory Geometry") Combinatory Geometry

      div.tab-pane(id="view-geometries" data-hook="view-geometries")

        hr

        div.mx-1.row.head.align-items-baseline

          div.col-sm-2: h6 <b>Name</b>

          div.col-sm-2: h6 <b>Type</b>

          div.col-sm-8: h6 <b>Formula</b>

        div.mt-3(data-hook="view-geometries-list")
